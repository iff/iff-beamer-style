\newcommand {\fullframegraphic}[1] {
{
\usebackgroundtemplate{\includegraphics[width=\paperwidth,keepaspectratio]{#1}}
\begin{frame}
\end{frame}
}
}

%FIXME: maybe it is possible to choose H/W in an automated way
\newcommand {\titledfullframegraphicH}[2] {
{
\usebackgroundtemplate{\includegraphics[height=\paperheight,keepaspectratio]{#2}}
\begin{frame}
    \begin{tikzpicture}[overlay]
        \draw[fill=black,color=black,opacity=0.5] (-2.0, 3.0) rectangle
        (12.5, 5.0);
        \draw (11.7, 3.5) node[left] (t1) {\Huge \textbf{#1}};
    \end{tikzpicture}
\end{frame}
}
}

\newcommand {\titledfullframegraphicW}[2] {
{
\usebackgroundtemplate{\includegraphics[width=\paperwidth,keepaspectratio]{#2}}
\begin{frame}
        \begin{tikzpicture}[overlay]
            \draw[fill=black,color=black,opacity=0.5] (-2.0, 3.0) rectangle
            (12.5, 5.0);
            \draw (11.7, 3.5) node[left] (t1) {\Huge \textbf{#1}};
        \end{tikzpicture}
\end{frame}
}
}

\newcommand {\sectionframe}[2] {
{
\begin{frame}

  \begin{tikzpicture}[overlay]
    \filldraw [very thick, acidgreen, opacity=0.5]
      (-10.0,-0.1) rectangle (15.0,5.0);
    \draw [very thick, acidgreen, opacity=1.0]
      (-10.0,-0.1) rectangle (15.0,5.0);
    \draw (-0.7,0.25) node[right] {\Huge #1};
    \draw (11.0, -0.5) node[left] {$\left[\; \textit{#2} \;\right]$};
  \end{tikzpicture}

\end{frame}
}}

\newcommand {\source}[2] {
{
    \let\thefootnote\relax\footnotetext{\textit{#1}, #2}
}}
